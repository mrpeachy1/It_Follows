<!-- res/layout/inventory_panel.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inventoryPanel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:visibility="visible">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-14dp"
        android:layout_marginTop="8dp"
        android:contentDescription="Inventory background"
        android:scaleType="centerCrop"
        android:src="@drawable/inventory" />

    <TextView
        android:id="@+id/saltBombDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/saltBombLabel"
        android:text=""
        android:textColor="#000000"
        android:textSize="0dp"
        android:layout_marginTop="2dp"/>

    <!-- 🌀 Decoy Shell -->

    <Button
        android:id="@+id/useSaltBombBtn"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/saltBombLabel"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="139dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="127dp"
        android:layout_toEndOf="@+id/saltBombDesc"
        android:background="@android:color/transparent"
        android:minHeight="50dp"
        android:text=""
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/decoyDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/decoyLabel"
        android:text=""
        android:textColor="#000000"
        android:textSize="0dp"
        android:layout_marginTop="2dp"/>

    <!-- 🛡️ Shell Shield -->

    <Button
        android:id="@+id/useDecoyBtn"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/decoyLabel"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="129dp"
        android:layout_toEndOf="@+id/decoyDesc"
        android:background="@android:color/transparent"
        android:minHeight="50dp"
        android:text=""
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/shieldDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shieldLabel"
        android:text=""
        android:textColor="#000000"
        android:textSize="0dp"
        android:layout_marginTop="2dp"/>


    <!-- ❌ Close Button -->

    <Button
        android:id="@+id/useShieldBtn"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shieldLabel"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="129dp"
        android:layout_toEndOf="@+id/shieldDesc"
        android:background="@android:color/transparent"
        android:minHeight="50dp"
        android:text=""
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/closeInventoryBtn"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_close"
        android:contentDescription="Close Inventory" />

    <!-- 🧊 Salt Bomb Label -->
    <TextView
        android:id="@+id/saltBombLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="134dp"
        android:layout_marginTop="140dp"
        android:text="Salt Bomb (0/5)"
        android:textColor="#FCECCF"
        android:textSize="20sp" />

    <!-- 🌀 Decoy Shell Label -->
    <TextView
        android:id="@+id/decoyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="134dp"
        android:layout_marginTop="290dp"
        android:text="Decoy Shell (0/5)"
        android:textColor="#FCECCF"
        android:textSize="20sp" />

    <!-- 🛡️ Shell Shield Label -->
    <TextView
        android:id="@+id/shieldLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="134dp"
        android:layout_marginTop="430dp"
        android:text="Shell Shield (0/1)"
        android:textColor="#FCECCF"
        android:textSize="20sp" />


</RelativeLayout>