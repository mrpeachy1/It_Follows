<!-- res/layout/inventory_panel.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inventoryPanel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#CCFDFDFD"
    android:padding="8dp"
    android:visibility="visible">
    <!-- Note: android:orientation="vertical" is not a valid attribute for RelativeLayout.
         It's used by LinearLayout. I've removed it. -->
    <!-- Note: android:layout_alignParentBottom="true" was also in a strange place, removed for now.
         If you want the whole panel at the bottom, this should be on the RelativeLayout
         within its PARENT layout (e.g., in activity_maps.xml if this is included there). -->
    <!-- Background Image -->
    <!-- ðŸ§Š Salt Bomb -->

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-6dp"
        android:layout_marginTop="15dp"
        android:contentDescription="Main menu background"
        android:scaleType="centerCrop"
        android:src="@drawable/inventory" />

    <TextView
        android:id="@+id/saltBombLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ§Š Salt Bomb (x0)"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/saltBombDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/saltBombLabel"
        android:text=""
        android:textColor="#000000"
        android:textSize="0dp"
        android:layout_marginTop="2dp"/>

    <!-- ðŸŒ€ Decoy Shell -->

    <Button
        android:id="@+id/useSaltBombBtn"
        android:layout_width="134dp"
        android:layout_height="59dp"
        android:layout_below="@id/saltBombDesc"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="181dp"
        android:layout_marginEnd="122dp"
        android:background="@android:color/transparent"
        android:text="" />

    <TextView
        android:id="@+id/decoyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/useSaltBombBtn"
        android:layout_marginTop="16dp"
        android:text="ðŸŒ€ Decoy Shell (x0)"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/decoyDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/decoyLabel"
        android:text=""
        android:textColor="#000000"
        android:textSize="0dp"
        android:layout_marginTop="2dp"/>

    <!-- ðŸ›¡ï¸ Shell Shield -->

    <Button
        android:id="@+id/useDecoyBtn"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_below="@id/decoyDesc"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="323dp"
        android:layout_marginEnd="122dp"
        android:background="@android:color/transparent"
        android:text="" />

    <TextView
        android:id="@+id/shieldLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/useDecoyBtn"
        android:layout_marginTop="16dp"
        android:text="ðŸ›¡ï¸ Shell Shield (x0)"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/shieldDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shieldLabel"
        android:text=""
        android:textColor="#000000"
        android:textSize="0dp"
        android:layout_marginTop="2dp"/>

    <Button
        android:id="@+id/useShieldBtn"
        android:layout_width="138dp"
        android:layout_height="58dp"
        android:layout_below="@id/shieldDesc"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="465dp"
        android:layout_marginEnd="122dp"
        android:background="@android:color/transparent"
        android:text="" />

    <ImageButton
        android:id="@+id/closeInventoryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:contentDescription="Close inventory"
        android:src="@android:drawable/ic_menu_close_clear_cancel" />

</RelativeLayout>
