<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background -->
    <ImageView
        android:id="@+id/settingsBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/settings_bg"
        android:scaleType="centerCrop"
        android:contentDescription="@null" />

    <!-- Optional dark overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000" />

    <ImageView
        android:id="@+id/panelGlow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/panelglow"
        android:scaleType="fitXY"
        android:alpha="0.85"
        android:layout_gravity="top" />

    <!-- Settings Content -->
    <ScrollView
        android:id="@+id/settingsScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Volume -->
            <TextView
                android:id="@+id/volumeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="152dp"
                android:layout_marginTop="8dp"
                android:letterSpacing="0.1"
                android:text="VOLUME"
                android:textColor="#DDFFBB"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <SeekBar
                android:id="@+id/volumeSlider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50"
                android:progressTint="#FFCC88"
                android:thumbTint="#FFCC88"
                app:layout_constraintTop_toBottomOf="@id/volumeLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" />

            <!-- Snail Speed -->
            <TextView
                android:id="@+id/snailSpeedLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="132dp"
                android:layout_marginTop="24dp"
                android:letterSpacing="0.1"
                android:text="SNAIL SPEED"
                android:textColor="#DDFFBB"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/volumeSlider" />

            <Spinner
                android:id="@+id/snailSpeedDropdown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/dropdown_background"
                android:popupTheme="@style/MySpinnerPopupTheme"
                app:layout_constraintTop_toBottomOf="@id/snailSpeedLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Snail Distance -->
            <TextView
                android:id="@+id/snailDistanceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="116dp"
                android:layout_marginTop="12dp"
                android:letterSpacing="0.1"
                android:text="SNAIL DISTANCE"
                android:textColor="#DDFFBB"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/snailSpeedDropdown" />

            <Spinner
                android:id="@+id/snailDistanceDropdown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/dropdown_background"
                android:popupTheme="@style/MySpinnerPopupTheme"
                app:layout_constraintTop_toBottomOf="@id/snailDistanceLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <!-- Measurement Units -->

            <!-- Measurement Units -->
            <TextView
                android:id="@+id/unitLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="144dp"
                android:layout_marginTop="12dp"
                android:letterSpacing="0.1"
                android:text="UNITS"
                android:textColor="#DDFFBB"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/snailDistanceDropdown" />

            <Spinner
                android:id="@+id/measurementUnitDropdown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/dropdown_background"
                android:popupTheme="@style/MySpinnerPopupTheme"
                app:layout_constraintTop_toBottomOf="@id/unitLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <!-- Snail Sprite -->

            <TextView
                android:id="@+id/snailAppearanceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="128dp"
                android:layout_marginTop="232dp"
                android:letterSpacing="0.1"
                android:text="SNAIL SPRITE"
                android:textColor="#DDFFBB"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/snailDistanceDropdown" />

            <HorizontalScrollView
                android:id="@+id/snailSpriteScroll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:scrollbars="none"
                app:layout_constraintTop_toBottomOf="@id/snailAppearanceLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:id="@+id/snailSpriteContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:gravity="center_vertical" />
            </HorizontalScrollView>

            <!-- Apply Button -->
            <Button
                android:id="@+id/applyButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="APPLY"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_translucent_bg"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/snailSpriteScroll"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>
